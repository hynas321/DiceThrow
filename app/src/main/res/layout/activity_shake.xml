<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShakeActivity">

    <TextView
        android:id="@+id/shake_textView"
        android:layout_width="269dp"
        android:layout_height="83dp"
        android:text="@string/shake_textView_device_shake"
        android:textAlignment="center"
        android:textSize="@dimen/textView_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <ImageView
        android:id="@+id/shake_imageView"
        android:layout_width="372dp"
        android:layout_height="506dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/image_shake_phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shake_textView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/shake_phone_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>